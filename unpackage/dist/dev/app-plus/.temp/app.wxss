@import "common/vendor.wxss";

page {
  min-height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  font-family: PingFang SC,Hiragino Sans GB,Microsoft YaHei,WenQuanYi Micro Hei,Helvetica Neue,Arial,sans-serif;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  background-color: #f4f6fa;
  width: 100%;
}
image {
  vertical-align: middle;
}
.mdtxt {
  display: inline-block;
  vertical-align: middle;
}
.postop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  top: 0;
}
.content-pad {
  padding: 20rpx;
}
.white {
  border-radius: 16rpx;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.block-tl {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 24rpx 20rpx;
}
.block-tl-lf {
  font-size: 30rpx;
  font-weight: 500;
}
.block-tl-rt {
  font-size: 24rpx;
  color: #a1a1a1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.block-tl-rt-item {
  border: 1rpx solid #e2e2e2;
  border-radius: 40rpx;
  height: 40rpx;
  padding: 0 20rpx;
  margin-left: 20rpx;
}
.block-tl-rt-more {
  height: 44rpx;
  line-height: 42rpx;
  margin-left: 40rpx;
}
.block-tl-icon {
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-right: 14rpx;
}
.block-tl-color1 {
  background-image: -webkit-linear-gradient(135deg, #e7b65f 0%, #f1d199 100%);
  background-image: linear-gradient(-45deg, #e7b65f 0%, #f1d199 100%);
  box-shadow: 2rpx 0 4rpx rgba(241, 109, 153, .1);
}
.block-tl-color2 {
  background-image: -webkit-linear-gradient(135deg, #f787b3 0%, #f3a7c5 100%);
  background-image: linear-gradient(-45deg, #f787b3 0%, #f3a7c5 100%);
  box-shadow: 4rpx 0 16rpx rgba(243, 167, 197, .3);
}
.block-tl-color3 {
  background-image: -webkit-linear-gradient(135deg, #8f75ed 0%, #a792f5 100%);
  background-image: linear-gradient(-45deg, #8f75ed 0%, #a792f5 100%);
  box-shadow: 4rpx 0 16rpx rgba(167, 146, 245, .3);
}
.block-tl-color4 {
  background-image: -webkit-linear-gradient(135deg, #e7b65f 0%, #f1d199 100%);
  background-image: linear-gradient(-45deg, #e7b65f 0%, #f1d199 100%);
  box-shadow: 4rpx 0 16rpx rgba(241, 109, 153, .3);
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 80rpx;
  flex: 0 0 80rpx;
}
.shadow {
  box-shadow: 0 10rpx 12rpx -12rpx rgba(0,0,0,0.15) inset;
  height: 16rpx;
  background-color: #f3f5f9;
}
.input-group {
  background-color: #ffffff;
  margin-top: 40rpx;
  position: relative;
}
.input-group::before {
  position: absolute;
  right: 0;
  top: 0;
  left: 0;
  height: 1rpx;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #c8c7cc;
}
.input-group::after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1rpx;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #c8c7cc;
}
.input-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  position: relative;
}
.input-row .title {
  width: 20%;
  height: 50rpx;
  min-height: 50rpx;
  padding: 15rpx 0;
  padding-left: 30rpx;
  line-height: 50rpx;
}
.input-row ._input {
  width: 80%;
  height: 50rpx;
  min-height: 50rpx;
  padding: 15rpx 0;
  padding-right: 30rpx;
  line-height: 50rpx;
}
.input-row.border::after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 15rpx;
  height: 1rpx;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #c8c7cc;
}
.btn-row {
  margin-top: 50rpx;
  padding: 20rpx;
}
._button.primary {
  background-color: #0faeff;
}
.b-line {
  position: relative;
}
.b-line::after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1rpx;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #ededed;
}