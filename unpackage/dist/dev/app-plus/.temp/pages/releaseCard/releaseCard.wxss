@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
  padding-bottom: 150rpx;
}
.summary {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 86rpx;
  color: #8a8a8a;
  font-size: 26rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.summary-con {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.summary-con text {
  margin-right: 20rpx;
  color: #505050;
  font-weight: 500;
}
.summary .uni-icon,
.rc-upload-rt .uni-icon {
  margin-right: 10rpx;
}
.rc-line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin: 0 20rpx;
  height: 100rpx;
}
.rc-line-lf {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 100rpx;
  flex: 0 0 100rpx;
  text-align: right;
}
.rc-line ._input,
.rc-select {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 30rpx;
  color: #dfdfdf;
}
.rc-upload {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 20rpx;
}
.up-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #f0f0f0;
  text-align: center;
  line-height: 100rpx;
  border-radius: 30rpx;
}
.rc-upload-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 20rpx;
}
.rc-upload-info text,
.rc-upload-rt {
  color: #8a8a8a;
}
.rc-upload-rt {
  font-size: 26rpx;
}
.user-agree {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  font-size: 22rpx;
  color: #8a8a8a;
}
.user-agree navigator {
  color: #749dc9;
}
.user-do {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.user-do view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 34rpx;
  color: #505050;
}
view.user-do-cancel {
  color: #888;
  text-align: left;
}
view.user-do-true {
  color: #44B549;
  text-align: right;
}
.user-sl-ls {
  background-color: #f4f6fa;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 20rpx;
}
.user-sl-item {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 25%;
  flex: 0 0 25%;
}
.user-sl-item-con {
  padding: 10rpx;
}
.user-sl-item text {
  display: block;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #fff;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #505050;
}
.user-sl-item text.active {
  background-color: #44B549;
  color: #fff;
  border-color: #44B549;
}
.mask {
  position: fixed;
  z-index: 998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
}
.popup {
  position: absolute;
  z-index: 999;
  background-color: #ffffff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
}
.popup-middle {
  width: 550rpx;
  height: 375rpx;
  border-radius: 10rpx;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
.popup-top {
  top: 0;
  width: 100%;
  text-align: center;
}
.popup-bottom {
  bottom: 0;
  width: 100%;
  text-align: center;
}
.uni-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 0 10rpx;
}
.uni-list-cell {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 33.3333%;
  flex: 0 0 33.3333%;
  text-align: left;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  color: #44B549;
  font-size: 24rpx;
  margin: 15rpx 0;
}