@import "../../common/vendor.wxss";

page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
}
.index {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.list {
  width: 750rpx;
  height: 100%;
}
.swiper-tab {
  width: 100%;
  white-space: nowrap;
  line-height: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
}
.swiper-tab-list {
  font-size: 30rpx;
  padding: 0 25rpx;
  display: inline-block;
  text-align: center;
  color: #858585;
  font-size: 26rpx;
}
.active {
  color: #000;
  font-weight: bold;
  position: relative;
}
.active::after {
  content: '';
  width: 40rpx;
  height: 4rpx;
  background-color: #44B549;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  margin-left: -20rpx;
  border-radius: 4rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,.3);
}
.swiper-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: 100%;
  height: calc(100% - 90rpx);
  background-color: #F4F6FA;
}
.loadmore {
  height: 70rpx;
  width: 750rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.loadmore-text {
  font-size: 30rpx;
  text-align: center;
  color: #999999;
}
.goods-ls {
  font-size: 0;
  padding: 20rpx 10rpx;
}
.goods-item {
  vertical-align: top;
  display: inline-block;
  width: 50%;
}
.goods-item-con {
  font-size: 28rpx;
  background-color: #fff;
  margin: 0 10rpx 20rpx;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.goods-img {
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
  height: 400rpx;
}
.goods-item-tl {
  padding: 20rpx;
  font-weight: 500;
  line-height: 1.3;
  height: 72rpx;
}
.goods-item-user {
  padding: 0 20rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #8a8a8a;
  font-size: 22rpx;
}
.avatar-36 {
  width: 36rpx;
  height: 36rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 36rpx;
  flex: 0 0 36rpx;
  border-radius: 100%;
}
.goods-item-phone {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 10rpx;
}
.goods-item-sum {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}