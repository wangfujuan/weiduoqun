@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
}
.import-tl {
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  line-height: 1;
}
.import-tl-txt {
  border-left: 4rpx solid #44B549;
  padding-left: 16rpx;
  border-radius: 4rpx;
}
.block-tl-rt-item .uni-icon {
  margin-right: 4rpx;
}
.import-user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 40rpx 18rpx;
}
.avatar-70 {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 72rpx;
  flex: 0 0 72rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin: 0 7rpx 14rpx 7rpx;
}
.import-btn {
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background-color: #eb644a;
  color: #FFF;
  border-radius: 4rpx;
  margin: 0 20rpx 40rpx;
  font-size: 30rpx;
}
.tips-tl {
  padding: 0 20rpx;
  color: #eb644a;
  font-weight: 500;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.tips-con {
  padding: 0 20rpx;
  line-height: 1.4;
  color: #eb644a;
  height: 350rpx;
  overflow: scroll;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}
.tips-con view {
  margin-bottom: 20rpx;
}
.other-use {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  height: 120rpx;
  line-height: 120rpx;
}
.other-use-item {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 50%;
  flex: 0 0 50%;
  text-align: center;
  font-size: 30rpx;
}
.other-use-item .uni-icon {
  margin-right: 10rpx;
}
.steps {
  padding: 30rpx 20rpx;
  font-size: 26rpx;
}
.steps-tl {
  position: relative;
  text-align: center;
  margin-bottom: 20rpx;
}
.steps-tl::after {
  position: absolute;
  top: 49%;
  left: 0;
  right: 0;
  content: '';
  height: 2rpx;
  background-color: #e5e5e5;
}
.steps-tl text {
  background-color: #fff;
  position: relative;
  z-index: 9;
  padding: 0 20rpx;
  color: #8a8a8a;
}
.steps-txt {
  line-height: 1.4;
  color: #8a8a8a;
  margin: 20rpx 0;
}
.steps-bold {
  font-weight: 500;
  color: #666;
}
.steps image {
  width: 100%;
}
.colorred {
  color: #eb644a;
}
.mask {
  position: fixed;
  z-index: 998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
}
.popup {
  position: absolute;
  z-index: 999;
  background-color: #ffffff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
}
.popup-middle {
  width: 620rpx;
  height: 530rpx;
  border-radius: 10rpx;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
.kf-tl {
  padding: 0 20rpx;
  height: 80rpx;
  color: #666;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.import-pop-tl {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}
.import-pop-con {
  text-align: center;
  color: #666;
  margin: 30rpx 0 20rpx;
}
.import-pop-line {
  padding: 0 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.import-pop-btn {
  margin: 40rpx 120rpx 0;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 76rpx;
  text-align: center;
  color: #fff;
}