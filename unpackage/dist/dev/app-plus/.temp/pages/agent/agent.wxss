@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
}
.rc-line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin: 0 20rpx;
  height: 100rpx;
}
.rc-line-lf {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 120rpx;
  flex: 0 0 120rpx;
  text-align: right;
}
.rc-line ._input,
.rc-select {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 30rpx;
  color: #c7c7c7;
}
.rc-select .fontred {
  color: #e86a38;
  font-size: 44rpx;
}
.pay-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  margin: 20rpx -10rpx 40rpx;
}
.pay-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  color: #090702;
}
.pay-item-con {
  margin: 0 10rpx;
  background-color: #fff;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 10rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 0 20rpx;
}
.pay-item-con .uni-icon {
  margin-right: 10rpx;
}
.pay-radio {
  position: absolute;
  right: 8rpx;
}
.submitbtn {
  width: 100%;
  background-image: -webkit-linear-gradient(135deg, #846224 0%, #c18f35 100%);
  background-image: linear-gradient(-45deg, #846224 0%, #c18f35 100%);
  color: #fff;
}
.morelist {
  text-align: center;
  text-decoration: underline;
  color: #666;
  margin: 40rpx 0;
}
.agent-tips-tl {
  color: #A8A8A8;
  margin-bottom: 10rpx;
}
.agent-tips-line {
  font-size: 26rpx;
  color: #999;
}
.agent-tips-line text {
  color: #b28431;
  text-decoration: underline;
}
.fixed-btn {
  background-color: #b28431;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
}
.open-tips {
  background-color: #fff;
  padding: 40rpx 60rpx 30rpx;
}
.open-tips-tl {
  padding-bottom: 20rpx;
  text-align: center;
  color: #b2b2b2;
}
.open-tips-line {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 14rpx;
}
.open-tips-line text {
  color: #b28431;
  text-decoration: underline;
}