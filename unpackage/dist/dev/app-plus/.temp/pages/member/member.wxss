  height: 0;
  border: 12rpx solid #fff;
  border-color: transparent transparent #fff transparent;
}
.member-active::after {
  position: absolute;
  content: '';
  height: 4rpx;
  background-color: #b28431;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
}
