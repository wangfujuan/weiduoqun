@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
}
.allpeople-top {
  background-color: #44B549;
  color: #fff;
  text-align: center;
  padding: 30rpx 0;
}
.allpeople-top-tl {
  font-size: 44rpx;
  text-align: center;
  padding: 20rpx 0;
  line-height: 1;
}
.allpeople-top-tl text {
  padding: 0 20rpx;
}
.marginlr {
  margin: 0 20rpx;
}
.fixed-btn-wp {
  background-color: #fff;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.fixed-btn {
  background-color: #b28431;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
}
.open-tips {
  background-color: #fff;
  padding: 40rpx 60rpx 30rpx;
}
.open-tips-tl {
  padding-bottom: 20rpx;
  text-align: center;
  color: #b2b2b2;
}
.open-tips-line {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 14rpx;
}
.open-tips-line text {
  color: #b28431;
  text-decoration: underline;
}
.obtain-boss {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin: 20rpx;
  border: 2rpx solid #d8ae3d;
  height: 24rpx;
  line-height: 24rpx;
  padding: 30rpx 20rpx;
  color: #a46c17;
  border-radius: 10rpx;
}
.obtain-boss-info {
  padding-left: 10rpx;
}
.obtain-boss-open {
  position: absolute;
  right: 20rpx;
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-image: -webkit-linear-gradient(135deg, #d9c085 0%, #b39a65 100%);
  background-image: linear-gradient(-45deg, #d9c085 0%, #b39a65 100%);
  border-radius: 48rpx;
  top: 18rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
}
.rc-line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin: 0 20rpx;
  height: 100rpx;
}
.rc-line-lf {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 180rpx;
  flex: 0 0 180rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.rc-line ._input,
.rc-select {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 30rpx;
  color: #c7c7c7;
}