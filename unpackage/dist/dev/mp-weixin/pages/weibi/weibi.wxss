  font-size: 24rpx;
}
.step-content {
  position: absolute;
  font-size: 20rpx;
  bottom: -50rpx;
  left: -20rpx;
  right: -20rpx;
  text-align: center;
}
.step-line {
  height: 2rpx;
  background-color: rgba(255,255,255,.3);
  width: 66rpx;
  margin: 0 12rpx 0 6rpx;
  position: relative;
}
.step-line::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border: 6rpx solid rgba(255,255,255,.3);
  border-color: transparent transparent transparent rgba(255,255,255,.3);
  right: -12rpx;
