  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
  background-color: #F4F6FA;
}
.card-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
}
.card-fixed-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.card-fixed-con {
  margin: 0 10rpx;
  height: 76rpx;
  line-height: 76rpx;
  background-image: -webkit-linear-gradient(135deg, #44b549 0%, #5dd962 100%);
  background-image: linear-gradient(-45deg, #44b549 0%, #5dd962 100%);
  border-radius: 6rpx;
  color: #fff;
}
.linearyellow {
  background-image: -webkit-linear-gradient(135deg, #f09737 0%, #f4bf3e 100%);
  background-image: linear-gradient(-45deg, #f09737 0%, #f4bf3e 100%);
}
.list {
  width: 100%;
  height: 100%;
}
.card-item {
  margin: 20rpx 30rpx;
  background-color: #fff;
  padding: 20rpx 24rpx 20rpx 24rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, .08);
  border-radius: 10rpx;
  line-height: 1;
  position: relative;
}
.card-item-icon {
  position: absolute;
  right: 24rpx;
  top: 28rpx;
}
.card-item-icon .uni-icon {
  color: #8a8a8a;
}
.card-item-tl {
  font-weight: 500;
