  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.card-item-sum {
  font-size: 20rpx;
  color: #e86a38;
}
.card-item-sum text {
  font-size: 32rpx;
}
.card-item-info {
  color: #a1a1a1;
  font-size: 26rpx;
  margin: 16rpx 0;
}
.card-item-sub {
  color: #a1a1a1;
  font-size: 20rpx;
  margin: 16rpx 0 0;
