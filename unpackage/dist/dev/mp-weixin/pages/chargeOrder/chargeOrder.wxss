@import "../../common/vendor.wxss";

page {
  height: 100%;
  overflow: hidden;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
