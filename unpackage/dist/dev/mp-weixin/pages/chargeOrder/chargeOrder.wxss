  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.card-item-detail {
  color: #44B549;
  border: 2rpx solid #44B549;
  border-radius: 4rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
}
.income-con {
  height: 250rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, .08);
  color: #999999;
  margin: 30rpx 30rpx 0;
}
.income-con-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
