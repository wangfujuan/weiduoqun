}
.income-con-info {
  line-height: 1;
  margin-top: 5rpx;
}
.income-con-info text {
  font-weight: 500;
  font-size: 54rpx;
}
.fontred {
  color: #e86a38;
}
.income-pay {
  height: 72rpx;
  line-height: 72rpx;
