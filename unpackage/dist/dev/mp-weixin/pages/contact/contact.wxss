@import "../../common/vendor.wxss";

.content {
  background-color: #f4f6fa;
}
view {
  box-sizing: border-box;
}
uni-swiper {
  height: 246rpx;
}
swiper {
  height: 232rpx;
}
.swiper-item {
  display: block;
  height: 232rpx;
  text-align: center;
  padding: 0 7rpx;
}
uni-image,
swiper-item image {
  width: 100%;
  border-radius: 14rpx;
}
.top-ls {
  font-size: 0;
  margin-top: 20rpx;
  padding: 0 10rpx;
}
.top-item {
  display: inline-block;
  vertical-align: top;
  width: 33.333333%;
  font-size: 28rpx;
  height: 110rpx;
  padding: 0 10rpx;
  color: #fff;
  line-height: 1;
}
.top-item-con {
  border-radius: 10rpx;
  height: 100%;
  padding: 20rpx;
}
.top-item-des {
  font-size: 24rpx;
  margin-top: 14rpx;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.8);
  transform: scale(0.8);
  white-space: nowrap;
}
.trend {
  height: 170rpx;
  margin: 0 22rpx 20rpx;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #fff;
  padding: 0 20rpx 0 40rpx;
}
.trend-icon {
  width: 60rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 60rpx;
  flex: 0 0 60rpx;
}
.trend-icon .uni-icon {
  font-size: 60rpx;
}
.trend-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 1;
  padding-left: 30rpx;
}
.trend-user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.trend-info-tl {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.trend-info-des {
  font-size: 24rpx;
}
.trend-user-avatar {
  width: 76rpx;
  height: 76rpx;
  border-radius: 100%;
  border: 4rpx solid #ececec;
  margin-left: -20rpx;
}
.trend-user image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 100%;
}
.tool-ls {
  font-size: 0;
  padding: 0 12rpx;
}
.tool-item {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: top;
  width: 50%;
  height: 236rpx;
  padding: 0 8rpx 22rpx;
}
.tool-item-box {
  border: 2rpx solid #f3f3f3;
  height: 100%;
  padding: 30rpx;
  border-radius: 10rpx;
}
.tool-item-con {
  line-height: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  margin-bottom: 30rpx;
}
.tool-tip {
  position: absolute;
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #fff;
  right: -30rpx;
  top: -24rpx;
  border: 1rpx solid #fff;
  -webkit-transform: scale(0.8);
  transform: scale(0.8);
}
.tool-item-icon .uni-icon {
  color: #fff;
  font-size: 44rpx;
}
.tool-item-des {
  color: #a1a1a1;
  font-size: 22rpx;
  margin-top: 20rpx;
}
.tool-item-info {
  padding-left: 20rpx;
}
.tool-item-btn {
  height: 56rpx;
  line-height: 52rpx;
  border: 2rpx solid #44B549;
  border-radius: 56rpx;
  text-align: center;
  color: #44B549;
  font-size: 22rpx;
}
.block-tl-rt-item .uni-icon {
  vertical-align: middle;
  margin-right: 2rpx;
}
.trend .uni-icon-qianjin {
  font-size: 30rpx;
  margin-left: 12rpx;
}
.block-more {
  display: inline-block;
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 10rpx;
  margin-left: 6rpx;
  color: #fff;
}
.more-color2 {
  background-image: -webkit-linear-gradient(135deg, #e7b65f 0%, #f1d199 100%);
  background-image: linear-gradient(-45deg, #e7b65f 0%, #f1d199 100%);
  box-shadow: 4rpx 0 8rpx rgba(241, 109, 153, .3);
}
.whiteborder .trend-user-avatar {
  border-color: #fff;
}