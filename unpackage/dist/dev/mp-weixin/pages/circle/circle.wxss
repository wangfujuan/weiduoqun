@import "../../common/vendor.wxss";

.block-more {
  display: inline-block;
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
  text-align: right;
  line-height: 28rpx;
  border-radius: 10rpx;
}
.block-tl-icon .uni-icon {
  color: #fff;
  font-size: 24rpx;
}
.block-tl-rt-item .uni-icon {
  color: #aaa;
  font-size: 26rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}
.uni-icon-qianjin {
  font-size: 22rpx;
}
uni-swiper {
  height: 140rpx;
  padding: 30rpx 0;
}
swiper {
  height: 140rpx;
  padding: 30rpx 0;
}
swiper-item {
  height: 140rpx;
}
.topic-item {
  padding: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.topic-item-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 140rpx;
  flex: 0 0 140rpx;
}
.topic-item-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 20rpx;
  line-height: 1;
}
.topic-item-tl {
  font-weight: 500;
  font-size: 30rpx;
  padding: 10rpx 0;
}
.topic-item-des {
  color: #535353;
  padding: 15rpx 0 22rpx;
}
.topic-item-num {
  color: #929292;
  font-size: 24rpx;
}
.topic-item-num text {
  margin-right: 20rpx;
}
.art-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}