@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
}
.comment-con {
  padding: 0 30rpx 26rpx;
}
.comment-item {
  padding: 26rpx 0 0;
}
.comment-user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.avatar-60 {
  width: 60rpx;
  height: 60rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 60rpx;
  flex: 0 0 60rpx;
  border-radius: 50%;
}
.comment-user-name {
  font-weight: 500;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.comment-info {
  padding-left: 80rpx;
  padding-top: 10rpx;
}
.comment-info-time {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #9d9d9d;
}