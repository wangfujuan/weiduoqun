@import "../../common/vendor.wxss";

.block-tl-rt-item .uni-icon {
  margin-right: 4rpx;
}
.content {
  background-color: #f4f6fa;
}
.art-item {
  padding: 30rpx 20rpx;
}
.art-item-tl {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  height: 80rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.art-user {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding-left: 20rpx;
  line-height: 1;
}
.art-usr-time {
  font-size: 22rpx;
  color: #848484;
  margin-top: 15rpx;
}
.art-item-info {
  font-size: 30rpx;
  line-height: 42rpx;
  margin: 20rpx 0 15rpx;
}
.art-item-pic {
  font-size: 0;
  margin-left: -5rpx;
  margin-right: -5rpx;
}
.art-item-img-wp {
  display: inline-block;
  vertical-align: top;
  width: 33.3333%;
  padding: 5rpx;
  box-sizing: border-box;
}
.art-item-img {
  width: 100%;
  border-radius: 10rpx;
}
.user-doings {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  height: 40rpx;
  margin-top: 25rpx;
  color: #545454;
}
.user-doings-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.user-doings-item .uni-icon {
  font-size: 38rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.m-line {
  width: 1rpx;
  height: 80rpx;
  background-color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.users-con {
  background-color: #f6f6f6;
  border-radius: 10rpx;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}
.users-zans {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 20rpx;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.users-zans .uni-icon {
  margin-right: 10rpx;
  margin-top: -4rpx;
}
.userzan-name:not(:last-child)::after {
  content: '\FF0C';
}
.user-comment-item {
  padding: 0 20rpx;
}
.user-comment-item text {
  color: #8f8f8f;
  margin-right: 10rpx;
}