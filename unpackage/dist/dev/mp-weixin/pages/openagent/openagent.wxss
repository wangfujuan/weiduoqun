@import "../../common/vendor.wxss";

.content {
  background-color: #F4F6FA;
  padding-bottom: 300rpx;
}
.openagent-top {
  padding: 50rpx 0;
  color: #fed388;
  background-image: -webkit-linear-gradient(45deg, #463413 20%, #090702 60%, #463413 100%);
  background-image: linear-gradient(45deg, #463413 20%, #090702 60%, #463413 100%);
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.openagent-top-subtl {
  font-size: 24rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.openagent-top-subtl::after,
.openagent-top-subtl::before {
  content: "";
  width: 40rpx;
  height: 2rpx;
  background-color: #fff;
  display: inline-block;
}
.openagent-top-subtl::before {
  margin-right: 20rpx;
}
.openagent-top-subtl::after {
  margin-left: 20rpx;
}
.openagent-top-tl {
  font-size: 48rpx;
  padding: 10rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  letter-spacing: 6rpx;
}
.openagent-top-btn {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-image: -webkit-linear-gradient(top, #fff2da 20%, #e3cea6 95%, #fff2da 100%);
  background-image: linear-gradient(to bottom, #fff2da 20%, #e3cea6 95%, #fff2da 100%);
  font-size: 24rpx;
  border-radius: 60rpx;
  padding: 0 80rpx;
  color: #b28431;
  margin-top: 20rpx;
}
.fixed-btn {
  background-color: #b28431;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 10rpx;
}
.pay-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  margin: 0 10rpx 40rpx;
}
.pay-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  color: #090702;
}
.pay-item-con {
  margin: 0 10rpx;
  background-color: #fff;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 10rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 0 20rpx;
}
.pay-item-con .uni-icon {
  margin-right: 10rpx;
}
.pay-radio {
  position: absolute;
  right: 8rpx;
}
.open-tips {
  background-color: #fff;
  padding: 40rpx 60rpx 30rpx;
}
.open-tips-tl {
  padding-bottom: 20rpx;
  text-align: center;
  color: #b2b2b2;
}
.open-tips-line {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 14rpx;
}
.open-tips-line text {
  color: #b28431;
  text-decoration: underline;
}
.wbre-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-flow: wrap;
  flex-flow: wrap;
  padding: 20rpx 10rpx 0;
}
.wbre-item {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 50%;
  flex: 0 0 50%;
  margin-bottom: 20rpx;
}
.wbre-item-con {
  margin: 0 10rpx;
  border-radius: 10rpx;
  border: 2rpx solid #e5e5e5;
  background: #fff;
  text-align: center;
  padding: 35rpx 0;
  position: relative;
}
.wbre-item-tl {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #b28431;
}
.wbre-item-tl text {
  font-size: 36rpx;
  font-weight: 500;
}
.wbre-item-subtl {
  font-size: 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.wbre-item-subtl .uni-icon {
  margin-bottom: 4rpx;
  margin-right: 10rpx;
}
.wbre-item-subtl text {
  color: #e86a38;
  -webkit-transform: scale(0.8);
  transform: scale(0.8);
  -webkit-transform-origin: 20rpx center;
  transform-origin: 20rpx center;
}
.active-wb-item {
  border-color: #b28431;
}
.active-wb-item .wbre-item-tl {
  color: #e86a38;
}
.active-wb-item::after {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  right: 0;
  bottom: 0;
  border: 16rpx solid;
  border-color: transparent #b28431 #b28431 transparent;
}
.active-icon {
  position: absolute;
  right: 4rpx;
  bottom: 4rpx;
  z-index: 9;
  -webkit-transform: rotate(225deg);
  transform: rotate(225deg);
}
.active-icon::after,
.active-icon::before {
  content: "";
  background-color: #fff;
  display: block;
}
.active-icon::before {
  width: 8rpx;
  height: 2rpx;
}
.active-icon::after {
  height: 12rpx;
  width: 2rpx;
}
.opensum {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 20rpx;
  font-size: 26rpx;
  border-top: 2rpx solid #e5e5e5;
}
.opensum-line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.opengray {
  color: #b2b2b2;
}
.fontred {
  color: #e86a38;
  font-size: 34rpx;
  font-weight: 500;
}