@import "../../common/vendor.wxss";

page {
  height: 100%;
  overflow: hidden;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
  background-color: #F4F6FA;
}
.swiper-tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #fff;
  border-top: 2rpx solid #E5E5E5;
  border-bottom: 2rpx solid #E5E5E5;
}
.swiper-line {
  width: 2rpx;
  background-color: #E5E5E5;
  height: 100%;
}
.swiper-tab-list {
  position: relative;
  font-size: 28rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  color: #8a8a8a;
}
.swiper-tab-list.active {
  color: #b28431;
}
.swiper-tab-list.active::after {
  content: '';
  position: absolute;
  width: 90%;
  bottom: 0;
  left: 5%;
  height: 4rpx;
  background-color: #b28431;
  box-shadow: 0 2rpx 10rpx rgba(178,132,49,.3);
}
.swiper-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: 100%;
  height: calc(100% - 84rpx);
}
.list {
  width: 100%;
  height: 100%;
}
.card-item {
  margin: 20rpx 20rpx;
  background-color: #fff;
  padding: 20rpx 24rpx 20rpx 44rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, .08);
  border-radius: 10rpx;
  line-height: 1;
  position: relative;
}
.card-item::before {
  content: "";
  width: 8rpx;
  height: 8rpx;
  background-color: #b28431;
  border-radius: 100%;
  position: absolute;
  left: 20rpx;
  top: 40rpx;
}
.haveread::before {
  background-color: #b2b2b2;
}
.card-item-icon {
  position: absolute;
  right: 24rpx;
  top: 28rpx;
}
.card-item-icon .uni-icon {
  color: #8a8a8a;
}
.card-item-tl {
  font-weight: 500;
  margin: 10rpx 0 12rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.card-item-time {
  font-size: 24rpx;
  font-weight: normal;
  color: #b2b2b2;
}
.card-item-sum text {
  font-size: 32rpx;
}
.card-item-sub {
  color: #b2b2b2;
  font-size: 24rpx;
  margin: 16rpx 0 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  line-height: 1.5;
}
.card-item-txt {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.card-item-last {
  text-decoration: underline;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 80rpx;
  flex: 0 0 80rpx;
  text-align: right;
}
.notedetail {
  color: #b28431;
  text-decoration: underline;
  display: inline;
  font-size: 24rpx;
}
.checkbox-wp {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.checkbox-wp .checkbox {
  margin-left: 20rpx;
}
.noteft {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  left: 0;
  right: 0;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 0 20rpx;
}
.noteft-btn {
  color: #b28431;
  height: 70rpx;
  line-height: 70rpx;
  border: 2rpx solid #b28431;
  width: 170rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.fillbg {
  background-color: #b28431;
  color: #fff;
}
.allcheck {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #b28431;
}