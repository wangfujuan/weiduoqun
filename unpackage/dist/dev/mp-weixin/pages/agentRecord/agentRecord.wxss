@import "../../common/vendor.wxss";

page {
  height: 100%;
  overflow: hidden;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
  background-color: #F4F6FA;
}
.card-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
}
.card-fixed-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.card-fixed-con {
  margin: 0 10rpx;
  height: 76rpx;
  line-height: 76rpx;
  background-image: -webkit-linear-gradient(135deg, #44b549 0%, #5dd962 100%);
  background-image: linear-gradient(-45deg, #44b549 0%, #5dd962 100%);
  border-radius: 6rpx;
  color: #fff;
}
.linearyellow {
  background-image: -webkit-linear-gradient(135deg, #f09737 0%, #f4bf3e 100%);
  background-image: linear-gradient(-45deg, #f09737 0%, #f4bf3e 100%);
}
.swiper-tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #fff;
  border-top: 2rpx solid #E5E5E5;
  border-bottom: 2rpx solid #E5E5E5;
}
.swiper-line {
  width: 2rpx;
  background-color: #E5E5E5;
  height: 100%;
}
.swiper-tab-list {
  position: relative;
  font-size: 28rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  color: #8a8a8a;
}
.swiper-tab-list.active {
  color: #b28431;
}
.swiper-tab-list.active::after {
  content: '';
  position: absolute;
  width: 90%;
  bottom: 0;
  left: 5%;
  height: 4rpx;
  background-color: #b28431;
  box-shadow: 0 2rpx 10rpx rgba(178,132,49,.3);
}
.swiper-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: 100%;
  height: calc(100% - 84rpx);
}
.list {
  width: 100%;
  height: 100%;
}
.card-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  margin: 20rpx 30rpx;
  background-color: #fff;
  padding: 26rpx 14rpx 20rpx 26rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, .08);
  border-radius: 10rpx;
  line-height: 1;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.card-item-rt {
  line-height: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.card-item-rt .uni-icon {
  margin-left: 10rpx;
}
.lastprice {
  text-decoration: line-through;
  font-size: 24rpx;
  -webkit-transform: scale(0.8);
  transform: scale(0.8);
  -webkit-transform-origin: right center;
  transform-origin: right center;
  text-align: right;
  margin-top: 10rpx;
}
.card-item-tl {
  color: #b28431;
}
.card-item-info {
  font-size: 26rpx;
  margin: 16rpx 0;
  color: #666;
}
.card-item-time {
  font-size: 24rpx;
  color: #b2b2b2;
}
.income-con {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, .08);
  color: #999999;
  margin: 20rpx 30rpx;
}
.income-con-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  position: relative;
  padding: 26rpx 0;
  font-size: 24rpx;
  height: 95rpx;
}
.income-con-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
